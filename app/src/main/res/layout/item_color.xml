<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_color"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/item_color_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_background"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_color_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="mediumpurple"

        app:layout_constraintTop_toBottomOf="@id/item_color_circle"
        app:layout_constraintStart_toStartOf="@id/item_color_circle"
        app:layout_constraintEnd_toEndOf="@id/item_color_circle"/>

</androidx.constraintlayout.widget.ConstraintLayout>